---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
import SectionHeader from "@/components/SectionHeader.astro";
import FeaturedCard from "@/components/FeaturedCard.astro";
import Card from "@/components/Card.astro";
import LinkButton from "@/components/LinkButton.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

export const prerender = true;

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
const latestPost = sortedPosts[0];
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <Hero latestPost={latestPost} />

    <div class="border-b border-border" />

    {
      featuredPosts.length > 0 && (
        <section id="featured" class="pt-12 pb-8">
          <SectionHeader title="Featured" viewAllHref={`${SITE.basePath}/posts/`} />
          <div class="grid gap-4 sm:grid-cols-2">
            {featuredPosts.map((post, index) => {
              // Use hero variant only if there's 1 post or 3+ posts (so secondary cards pair nicely)
              const useHero = index === 0 && featuredPosts.length !== 2;
              return (
                <FeaturedCard
                  post={post}
                  variant={useHero ? "hero" : "secondary"}
                />
              );
            })}
          </div>
        </section>
      )
    }

    {featuredPosts.length > 0 && recentPosts.length > 0 && (
      <div class="border-b border-border" />
    )}

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-8">
          <SectionHeader
            title="Recent Posts"
            viewAllHref={`${SITE.basePath}/posts/`}
          />
          <ul class="grid gap-4 sm:grid-cols-2">
            {recentPosts.map(
              (post, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...post} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href={`${SITE.basePath}/posts/`}>
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/blog/");
    }
  });
</script>
